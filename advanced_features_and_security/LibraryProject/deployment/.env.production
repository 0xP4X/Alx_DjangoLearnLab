# Production Environment Configuration for Django HTTPS
# Copy this file to .env in your production environment and update the values

# HTTPS Configuration
DJANGO_HTTPS_ENABLED=True

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration (example for PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Allowed Hosts (update with your actual domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Email Configuration (for error reporting and notifications)
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Static and Media Files
STATIC_ROOT=/var/www/django/static
MEDIA_ROOT=/var/www/django/media

# Security Settings (these are handled in settings.py based on DJANGO_HTTPS_ENABLED)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/django/application.log

# Cache Configuration (optional)
CACHE_URL=redis://localhost:6379/1

# Additional Security
ADMIN_URL=secure-admin-url-change-this/
